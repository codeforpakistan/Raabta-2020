<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LicenseProcedureResult">



    <ScrollView
        android:visibility="invisible"
        android:id="@+id/main1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/learner_license_permit"
                android:background="@color/colorPrimary"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	 City Traffic Police Office is situated in Gulbahar, Peshawar."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:id="@+id/permanent_driving_license"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	The candidate needs to come to City Traffic Police Office, in person."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:id="@+id/light_transport_license"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	Show your Original CNIC in reception and get your Visitor Card for the required process."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:id="@+id/diplomat_non_deplomat_license"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	After getting visitor card go to the hall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>






        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:visibility="invisible"
        android:id="@+id/main2"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:background="@color/colorPrimary"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	Every candidate in supposed to take road sign test and driving test."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	For LTV driving license the candidate must be 21 year of age at the time of learner permit."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	After completion of 06 months, take along learner permit, original CNIC, fee slip."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	On turn your fingerprint and snap will be recorded and saved in the computer."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	Obtained test slip and attached copies of CNIC, learner slip, driving license fee slip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁ Go to theory test through touch screen in theory test area."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	After successfully going through the theory test, candidate should appear in practical driving test in the driving test area."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	After passing both the tests, form should be signed by Motor License Authority (MLA)."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:text="⦁	A driving license slip will be handed over to the candidate depicting license number and date of collection."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>







        </LinearLayout>

    </ScrollView>
