<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_marginRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView

        android:id="@+id/offence_title"
        android:maxLines="3"
        android:background="#39AAA4"
        android:padding="20dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Excedding Precribe Speed limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></TextView>



    <LinearLayout
                    android:id="@+id/details_section"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <ImageView

                        android:layout_margin="2dp"
                        android:src="@drawable/offence_list_bike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </ImageView>
                        <TextView
                            android:id="@+id/bike_offence_fee"
                            android:textColor="#39AAA4"
                            android:textStyle="bold"
                            android:text="Fine PKR 500"
                            android:gravity="left|center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       >
                        <ImageView

                            android:layout_margin="2dp"
                            android:src="@drawable/car_offence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>
                        <TextView
                            android:id="@+id/car_offence_fee"
                            android:layout_marginStart="10dp"
                            android:textColor="#39AAA4"
                            android:textStyle="bold"
                            android:text="Fine PKR 500"
                            android:gravity="left|center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="#ffffff"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp">
                        <ImageView

                            android:layout_margin="2dp"
                            android:src="@drawable/jeep_offence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>
                        <TextView
                            android:id="@+id/jeep_offence_fee"
                            android:layout_marginStart="10dp"
                            android:textColor="#39AAA4"
                            android:textStyle="bold"
                            android:text="Fine PKR 500"
                            android:gravity="left|center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="#ffffff"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp">
                        <ImageView

                            android:layout_margin="2dp"
                            android:src="@drawable/buss_offence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>
                        <TextView
                            android:id="@+id/bus_offence_fee"
                            android:layout_marginStart="10dp"
                            android:textColor="#39AAA4"
                            android:textStyle="bold"
                            android:text="Fine PKR 500"
                            android:gravity="left|center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="#ffffff"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp">
                        <ImageView

                            android:layout_margin="2dp"
                            android:src="@drawable/truck_offence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>
                        <TextView
                            android:id="@+id/truck_offence_fee"
                            android:layout_marginStart="10dp"
                            android:textColor="#39AAA4"
                            android:textStyle="bold"
                            android:text="Fine PKR 500"
                            android:gravity="left|center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="2dp"
                        android:background="#ffffff"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp">
                        <ImageView

                            android:layout_margin="2dp"
                            android:src="@drawable/lorry_offence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>
                        <TextView
                            android:id="@+id/trolley_offence_fee"
                            android:layout_marginStart="10dp"
                            android:textColor="#39AAA4"
                            android:textStyle="bold"
                            android:text="Fine PKR 500"
                            android:gravity="left|center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"></TextView>
                    </LinearLayout>






                </LinearLayout>






</LinearLayout>